---
layout: layout.liquid
permalink: "shoots/"
renderData:
    title: "Shoots &mdash; bluemwhitew Photography"
---

<section class="section__title">
    <h1>Shoots</h1>
</section>

{% if shoots %}
    <section class="section__shoots">
        <ul>
            {%- for shoot in shoots -%}
                {% if shoot.isPrivate != true %}
                    <li>
                        <figure>
                            <a href="/shoots/{{ shoot.title | slug }}" title="{{ shoot.title }}">
                                <amp-img alt="{{ shoot.title }}" height="1" layout="responsive"
                                         src="https:{{ shoot.featuredImage.fields.file.url }}?f=center&fit=fill&fm=webp&h=640&q=80&w=640"
                                         width="1">
                                    <amp-img alt="Placeholder" fallback height="1" layout="responsive"
                                             src="https://via.placeholder.com/640"
                                             width="1">
                                    </amp-img>
                                </amp-img>
                                <figcaption>
                                    <h5>{{ shoot.title }}</h5>
                                </figcaption>

                            </a>
                        </figure>
                    </li>
                {%- endif -%}
            {%- endfor -%}
        </ul>
    </section>
{%- endif -%}

<style>
    .section__title {
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-height: 50vh;
        text-align: center;
    }

    .section__shoots ul {
        display: grid;
        gap: 1rem;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: 1fr;
        list-style: none;
        margin: 0 auto;
        max-width: 80vw;
        padding-left: 0;
    }

    .section__shoots figure {
        margin: 0;
        position: relative;
    }

    .section__shoots figure a {
        color: #fff;
        text-decoration: none;
    }

    .section__shoots amp-img {
        background-color: #333; /* @todo: Replace with Generic Background */
        transition: opacity 500ms ease-in-out;
    }

    .section__shoots figure figcaption {
        bottom: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        left: 1rem;
        opacity: 0;
        position: absolute;
        right: 1rem;
        text-align: center;
        top: 1rem;
        transform: translateY(-1rem);
        transition: opacity 500ms ease-in-out, transform 500ms ease-in-out;
    }

    .section__shoots figure a:hover amp-img {
        opacity: 0.5;
    }

    .section__shoots figure a:hover figcaption {
        opacity: 1;
        transform: translateY(0);
    }

    @media (min-width: 768px) {
        .section__shoots ul  {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (min-width: 1200px) {
        .section__shoots ul  {
            grid-template-columns: repeat(4, 1fr);
        }
    }
</style>
