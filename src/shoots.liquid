---
layout: layout.liquid
permalink: "shoots/"
renderData:
    title: "Shoots &mdash; bluemwhitew Photography"
---

<section class="flex flex-col justify-center min-h-[50vh] text-center">
    <h1 class="font-bold mb-4 text-5xl md:text-6xl">Shoots</h1>
</section>

{% if shoots %}
    <section class="section__shoots">
        <ul class="gap-4 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
            {%- for shoot in shoots -%}
                {% if shoot.isPrivate != true %}
                    <li>
                        <figure class="relative">
                            <a class="no-underline text-white" href="/shoots/{{ shoot.title | slug }}" title="{{ shoot.title }}">
                                <amp-img alt="{{ shoot.title }}" class="bg-yellow-400" height="1" layout="responsive"
                                         src="https:{{ shoot.featuredImage.fields.file.url }}?f=center&fit=fill&fm=webp&h=640&q=80&w=640"
                                         width="1">
                                    <amp-img alt="Placeholder" class="bg-yellow-400" fallback height="1" layout="responsive"
                                             src="https://via.placeholder.com/640"
                                             width="1">
                                    </amp-img>
                                </amp-img>
                                <figcaption>
                                    <h5>{{ shoot.title }}</h5>
                                </figcaption>
                            </a>
                        </figure>
                    </li>
                {%- endif -%}
            {%- endfor -%}
        </ul>
    </section>
{%- endif -%}
