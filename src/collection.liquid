---
eleventyComputed:
    metaDescription: "{{ collection.metaDescription }}"
    metaKeywords: "{{ collection.metaKeywords }}"
    metaRating: "{{ collection.metaRating }}"
    metaRobots: "{{ collection.metaRobots }}"
    title: "{{ collection.title }}"
layout: layout.liquid
pagination:
    addAllPagesToCollections: true
    alias: collection
    data: contentful
    size: 1
permalink: "collections/{{ collection.title | slug }}/"
---
{% render "collection/hero", collection: collection %}

<section>
    <ul class="grid grid-cols-2 gap-0 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
        {% for image in collection.images %}
            <li>
                <figure>
                    <img
                        alt="{{ image.fields.title }}"
                        decoding="async"
                        height="640"
                        loading="lazy"
                        src="https:{{ image.fields.file.url }}?f=center&amp;fit=fill&amp;fl=progressive&amp;fm=jpg&amp;h=640&amp;q=80&amp;w=640"
                        srcset="
                            https:{{ image.fields.file.url }}?f=center&amp;fit=fill&amp;fl=progressive&amp;fm=jpg&amp;h=426&amp;q=80&amp;w=426 1x,
                            https:{{ image.fields.file.url }}?f=center&amp;fit=fill&amp;fl=progressive&amp;fm=jpg&amp;h=640&amp;q=80&amp;w=640 2x,
                            https:{{ image.fields.file.url }}?f=center&amp;fit=fill&amp;fl=progressive&amp;fm=jpg&amp;h=1280&amp;q=80&amp;w=1280 3x
                        "
                        width="640"
                    >
                </figure>
            </li>
        {% endfor %}
    </ul>
</section>
